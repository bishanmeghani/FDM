<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DotNetwork</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <link rel="stylesheet" href="Content/bootstrap.css" />
    <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <form class="form-inline">
                    <div class="form-group">
                        <span class="navbar-brand">@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "home", @style = "color:#ffffff;" })</span>
                        <span class="navbar-brand">@Html.ActionLink("Code Wall", "Wall", "CodeWall", routeValues: null, htmlAttributes: new { id = "codeWall", @style = "color:#ffffff;" })</span>
                        <span class="navbar-brand">@Html.ActionLink("Your Profile", "ProfilePage", "Account", routeValues: null, htmlAttributes: new { id = "profile", @style = "color:#ffffff;" })</span>
                        <span class="navbar-brand">@Html.ActionLink("Settings", "SettingsPage", "Settings", routeValues: null, htmlAttributes: new { id = "settings", @style = "color:#ffffff;" })</span>
                        
                    </div>
                    <div class="form-group">
                        <span class="navbar-brand">@Html.TextBox("Search")</span>
                        <input type="submit" value="Search" class="btn btn-default"/>
                    </div>
                </form>
                
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                </ul>
                @Html.Partial("_LoginPartial", new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>"How much code could a code logger log if a code logger could log code?" - Spencer Newton, CIO</p>
            <p>&copy; @DateTime.Now.Year - DotNetwork</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/custom.css")
    @RenderSection("scripts", required: false)
</body>
</html>
