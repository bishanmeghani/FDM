@model SocialNetwork.WebUI.Models.UserPostViewModel

@using (Ajax.BeginForm("MakePost", "CodeWall", new AjaxOptions()
    {
        HttpMethod = "POST",
        UpdateTargetId = "PostForm",
        InsertionMode = InsertionMode.Replace
    }, new { @id = "PostForm" }))
{
    <div class="make-post-form form-inline">
        <div class="form-group col-md-offset-2 col-md-4">
            @Html.LabelFor(model => model.post.title, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.post.title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group col-md-2">
            @Html.LabelFor(model => model.post.language, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.post.language, new { htmlAttributes = new { @class = "form-control " } })
            </div>        
        </div>

        <div class="form-group col-md-offset-2 col-md-4">
            @Html.LabelFor(model => model.post.content, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.TextAreaFor(model => model.post.content, new { @class = "form-control", @rows = 7 })
            </div>        
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.post.code, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.TextAreaFor(model => model.post.code, new { @class = "form-control", @rows = 7 })
            </div>        
        </div>

        <div class="form-group col-md-offset-4 col-md-4" style="padding: 1em">
            <div class="text-center">
                <input type="submit" value="Submit Post" class="btn btn-primary" />
            </div>
        </div>
    </div>
}