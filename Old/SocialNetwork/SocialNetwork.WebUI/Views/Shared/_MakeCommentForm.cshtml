@model SocialNetwork.WebUI.Models.CommentViewModel

<div class="comment-container">
    <div class="container comment-sidebar col-sm-2">
        <h4 class="text-center">Comment: </h4>
    </div>

    <div class="container comment-content col-sm-10">
       @* @using (Html.BeginForm("MakeComment", "CodeWall", FormMethod.Post))*@
        @using (Ajax.BeginForm("MakeComment", "CodeWall", new AjaxOptions()
                {
                    HttpMethod = "POST",
                    UpdateTargetId = "CommentForm" + Model.post.postId,
                    InsertionMode = InsertionMode.ReplaceWith
                }, new { @id = "CommentForm" + Model.post.postId }))
        { 
            @Html.HiddenFor(model => model.post.postId);
            <div class="make-post-form form-inline">
                <div class="form-group col-md-8">
                    @Html.EditorFor(model => model.comment.content, new { htmlAttributes = new { @class = "form-control " } })
                </div>

                <div class="form-group text-center" style="padding-left: 1em">
                    <div class="text-center col-md-2">
                        <input type="submit" value="Reply" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>
